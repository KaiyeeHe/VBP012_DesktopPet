{
  "name": "money-leopard-pet",
  "version": "1.0.0",
  "description": "一只帮你进钱的桌面金钱豹",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --mac --dir",
    "dist": "electron-builder --mac"
  },
  "author": "YourName",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.moneyleopard.pet",
    "productName": "金钱豹",
    "compression": "maximum",
    "asar": true,
    "files": [
      "index.html",
      "main.js",
      "!node_modules",
      "!dist",
      "!00_records",
      "!*.md",
      "!desktop_pet_html_preview.html",
      "!index_*.html",
      "!main_v3.js"
    ],
    "mac": {
      "target": {
        "target": "dir",
        "arch": ["arm64", "x64"]
      },
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.13.0",
      "type": "distribution",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "electronLanguages": ["zh_CN"]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis"
    }
  }
}
